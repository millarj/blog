<div id="main-image">
  <h1>Jeffrey Apollo</h1>
  <h5>A beginers guide to creating web based applications.</h5>
</div>
 
<div class="container" id="index-container">  
  <div class="col-sm-8" id="articles-index">
    <div class="card">
      <div class="card-header">
        <h4>Recent Articles</h4>
        <%= link_to 'New article', new_article_path, class: "btn btn-primary btn-sm" %>
      </div>

      <% @articles.each do |article| %>
        <div class="card card-block" style="margin: 1em">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.text %></p>
          <div class="card-text">
            <%= link_to 'Show', article_path(article) %> |
            <%= link_to 'Edit', edit_article_path(article) %> |
            <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  <div class="col-sm-4" id="articles-index">
    <div class="card">
      <div class="card-header">
        <h4>Current Projects</h4>
        <%= link_to 'New project', new_article_path, class: "btn btn-primary btn-sm" %>
      </div>

      <% @articles.each do |article| %>
        <div class="card card-block" style="margin: 1em">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.text %></p>

          <div class="card-text">
            <%= link_to 'Show', article_path(article) %> |
            <%= link_to 'Edit', edit_article_path(article) %> |
            <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>


